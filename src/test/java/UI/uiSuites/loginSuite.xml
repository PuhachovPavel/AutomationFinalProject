<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "loginSuite">
    <test name = "Login page displayed when opening the website Test">
        <classes>
            <class name = "UI.tests.CheckThatLoginPageIsDisplayedAfterUserNavigatesToTheWebsiteTest"/>
        </classes>
    </test>
    <test name = "Login page elements Test">
        <classes>
            <class name = "UI.tests.CheckIfAllElementsOfLoginPageAreDisplayedTest"/>
        </classes>
    </test>
    <test name = "Login Test">
        <classes>
            <class name = "UI.tests.CheckLoginFunctionalityTest"/>
        </classes>
    </test>
    <test name = "Logout Test">
        <classes>
            <class name = "UI.tests.CheckLogoutFunctionalityTest"/>
        </classes>
    </test>
    <test name = "Logging in as different users Test">
        <classes>
            <class name = "UI.tests.CheckThatDifferentUsersCanLogInTest"/>
        </classes>
    </test>
</suite>