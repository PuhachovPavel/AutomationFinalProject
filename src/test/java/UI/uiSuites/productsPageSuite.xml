        <classes>
            <class name = "UI.tests.CheckThatAllElementsOfProductsPageAreDisplayedTest"/>
        </classes>
    </test>
    <test name = "Menu">
        <classes>
            <class name = "UI.tests.CheckThatMenuCanBeOpenedAndClosedTest"/>
