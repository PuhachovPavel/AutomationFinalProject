<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "shoppingCartPageSuite">
    <test name = "All Elements displayed">
        <classes>
            <class name = "UI.tests.CheckThatAllElementsOfShoppingCartPageAreDisplayedTest"/>
        </classes>
    </test>
    <test name = "Return">
        <classes>
            <class name = "UI.tests.CheckThatUserCanReturnToProductsPageFromShoppingCartPageTest"/>
        </classes>
    </test>
    <test name = "Added Item displayed">
        <classes>
            <class name = "UI.tests.CheckThatAddedItemIsDisplayedInShoppingCartTest"/>
        </classes>
    </test>
    <test name = "Remove">
        <classes>
            <class name = "UI.tests.CheckRemoveFunctionalityOnShoppingCartPageTest"/>
        </classes>
    </test>
    <test name = "Checkout">
        <classes>
            <class name = "UI.tests.CheckCheckoutFunctionalityTest"/>
        </classes>
    </test>
</suite>